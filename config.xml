<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.alunny.amazing"
	version 	= "1.0.0">

	<name>Mejor en Bici</name>

	<description>
	Una aplicación para ver la disponibilidad de bicicletas en las estaciones
	que hay en la Ciudad de Buenos Aires. Para más información ver: 
	http://mejorenbici.buenosaires.gob.ar/
	</description>

	<author href="http://github.com/cesarmiquel"
		email="miquel@easytech.com.ar">
		César Miquel
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="blurry.png" gap:role="default" />

	<gap:splash src="bici.png" />

	<feature name="http://api.phonegap.com/1.0/geolocation"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

	<!-- sample preference specification -->
	<!-- <preference name="autorotate" value="false" readonly="true"/> -->
</widget>
